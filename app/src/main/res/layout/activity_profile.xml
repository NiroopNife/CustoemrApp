<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6"
    android:orientation="vertical"
    tools:context=".Home.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient_color" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:layout_marginTop="50dp"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"
            android:src="@drawable/profile" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:elevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp">

        <FrameLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_edge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textSize="@dimen/large_text" />

            <View
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#A9A9A9" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Name   "
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tguardianname"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:id="@+id/nameedit"
                    android:src="@drawable/ic_edit"/>

                <EditText
                    android:id="@+id/guardianname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:visibility="gone"
                    android:text="Full name last name"
                    android:textColor="#000"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Phone# "
                    android:textSize="@dimen/small_text" />


                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tguardianphone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:id="@+id/phoneedit"
                    android:src="@drawable/ic_edit"/>

                <EditText
                    android:id="@+id/guardianphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1.5"
                    android:visibility="gone"
                    android:text="9741814444"
                    android:textSize="@dimen/small_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Address" />


                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tguardianaddress"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:id="@+id/addressedit"
                    android:src="@drawable/ic_edit"/>

                <EditText
                    android:id="@+id/guardianaddress"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Shop No 5, Behind The Masreen Manzil, Kishore Kumar Gangoli Marg, Juhu,  Mumbai,  Maharashtra, 400049"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:elevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp">

        <FrameLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_edge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Details"
                android:textSize="@dimen/large_text" />

            <View
                android:layout_width="250dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#A9A9A9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Latitude"
                    android:textSize="@dimen/small_text" />


                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not set"
                    android:textSize="@dimen/small_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Longitude"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not set"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <Button
                android:id="@+id/fetchlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/mybutton"
                android:drawableRight="@drawable/ic_location"
                android:text="Click to add a new location" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/submit"
        android:background="@drawable/mybutton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="75dp"
        android:textColor="@color/buttonTextColor"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Save details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="#A9A9A9" />


</LinearLayout>